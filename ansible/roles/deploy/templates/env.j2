#################
# These are ONLY used for the docker compose file
#################

# Used by multiple containers
PUBLIC_DOMAIN={{ public_hostname }}
TZ={{ timezone }}

# User/Group IDs
PUID=1000
PGID=1000

# Traefik and cloudflare-ddns
CF_DNS_API_TOKEN={{ cf_dns_api_token }}

# Traefik
ACME_EMAIL={{ acme_email }}
CF_ZONE_API_TOKEN={{ cf_zone_api_token }}
TRAEFIK_BASIC_AUTH_USERNAME={{ traefik_username }}
TRAEFIK_BASIC_AUTH_PASSWORD={{ traefik_password }}

# Traefik OIDC
TRAEFIK_OIDC_AUTH_SECRET={{ traefik_oidc_auth_secret }}
TRAEFIK_OIDC_CLIENT_ID={{ traefik_oidc_client_id }}
TRAEFIK_OIDC_CLIENT_SECRET={{ traefik_oidc_client_secret }}

# No git secret. Calculated instead of passed in from the ansible-playbook command.
TRAEFIK_OIDC_PROVIDER_URL=https://id.{{ public_hostname }}/

# Traefik to LAN
IDM_DOMAIN={{ idm_domain }}
LAN_SERVICE1={{ lan_service1 }}
LAN_SERVICE2={{ lan_service2 }}

# Gatus
GATUS_POSTGRES_USER=username
GATUS_POSTGRES_PASSWORD=password
GATUS_POSTGRES_DB=gatus

# Pocket ID
MAXMIND_LICENSE_KEY={{ maxmind_license_key }}
POCKETID_POSTGRES_USER={{ pocketid_postgres_user }}
POCKETID_POSTGRES_PASSWORD={{ pocketid_postgres_password }}
POCKETID_POSTGRES_DB={{ pocketid_postgres_db }}
POCKETID_ENCRYPTION_KEY={{ pocketid_encryption_key }}

# Tuwunel (Matrix)
TUWUNEL_ALLOW_REGISTRATION={{ tuwunel_allow_registration | default('false') }}
TUWUNEL_REGISTRATION_TOKEN={{ tuwunel_registration_token | default('') }}
TUWUNEL_OIDC_CLIENT_ID={{ tuwunel_oidc_client_id | default('') }}
TUWUNEL_OIDC_CLIENT_SECRET={{ tuwunel_oidc_client_secret | default('') }}

# multiple
SMTP_HOST={{ smtp_host }}
SMTP_USER={{ smtp_user }}
SMTP_PASSWORD={{ smtp_password }}
SMTP_TO={{ smtp_to }}