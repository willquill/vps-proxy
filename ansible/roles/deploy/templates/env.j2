#################
# These are ONLY used for the docker compose file
#################

# Used by multiple containers
PUBLIC_DOMAIN={{ public_hostname }}
TZ={{ timezone }}

# User/Group IDs
PUID={{ user_id }}
PGID={{ group_id }}

# Used by Authentik
AUTHENTIK_POSTGRESQL__NAME={{ authentik_postgresql_name }}
AUTHENTIK_POSTGRESQL__PASSWORD={{ authentik_postgresql_password }}
AUTHENTIK_POSTGRESQL__USER={{ authentik_postgresql_user }}
AUTHENTIK_SECRET_KEY={{ authentik_secret_key }}

# Used by Traefik and cloudflare-ddns
CF_DNS_API_TOKEN={{ cf_dns_api_token }}

# Used by Traefik
CF_ZONE_API_TOKEN={{ cf_zone_api_token }}
TRAEFIK_BASIC_AUTH_USERNAME={{ traefik_username }}
TRAEFIK_BASIC_AUTH_PASSWORD={{ traefik_password }}

# Gatus
GATUS_POSTGRES_USER=username
GATUS_POSTGRES_PASSWORD=password
GATUS_POSTGRES_DB=gatus